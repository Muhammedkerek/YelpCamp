<% layout("layouts/boilerplate") %>

<title>YelpCamp</title>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/yelpcamp/<%=match._id  %>?_method=PUT" method="post" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" id="title" name="title" placeholder="Title" required
                        value="<%= match.title  %>">
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" id="location" name="location" placeholder="Location"
                        required value="<%= match.location  %>">
                </div>


                <div class="mb-3">
                    <label class="form-label" for="price">CampGround Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input class="form-control" type="text" id="price" name="price" required placeholder="0.00"
                            value="<%=match.price  %>">
                    </div>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="description" required
                        placeholder="Description"><%=match.description%></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Add More images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
                <div class="mb-3">
                    <% match.images.forEach(function(img , i){ %>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>

                    <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update campground</button>
                </div>

            </form>
            <a class="btn btn-danger" href="/yelpcamp/<%=match._id%>">back to campground</a>


        </div>
    </div>